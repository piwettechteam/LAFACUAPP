<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/actAvatarImg"
        android:layout_marginLeft="8dp"
        android:src="@drawable/logo2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="9dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/actAvatarImg"
        android:layout_alignEnd="@+id/actTextTxt"
        android:id="@+id/actDateTxt"
        android:textSize="13sp"
        android:layout_marginRight="10dp"
        tools:ignore="RtlHardcoded,SmallSp" />

    <TextView
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actTextTxt"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:maxLines="2"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/actAvatarImg"
        android:layout_toEndOf="@+id/actAvatarImg"
        tools:ignore="RtlHardcoded,SmallSp" />


</RelativeLayout>